### Theme
theme = dark:catppuccin-mocha,light:catppuccin-macchiato # fallback: latte
# background = #0B1215          # uncomment for custom dark background
background-opacity = 0.90
background-blur-radius = 20
bold-is-bright = true

### Window
window-decoration = true
window-theme = auto
window-padding-color = background
window-padding-x = 0
window-padding-y = 0
window-padding-balance = false
window-colorspace = "display-p3"
adjust-cell-height = 10%
macos-titlebar-style = tabs

### Shell Integration
shell-integration-features = true
# shell-integration-features = sudo   # uncomment to restrict to sudo

confirm-close-surface = true         # disables close confirmation dialog

### Font
font-family = JetBrains Mono
font-size = 12
font-feature = +liga                 # enable ligatures
cursor-color = #FFA500               # orange cursor
cursor-style = block

### Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true

### Miscellaneous
cursor-click-to-move = true
link-url = true

### Keybindings
keybind = global:opt+`=toggle_quick_terminal

# Window splits
keybind = ctrl+\=new_split:right
keybind = ctrl+-=new_split:down
keybind = ctrl+z=toggle_split_zoom
keybind = ctrl+e=equalize_splits
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right
keybind = super+shift+enter=new_split:auto
