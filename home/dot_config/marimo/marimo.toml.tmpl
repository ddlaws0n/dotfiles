{{- if .use_secrets -}}
[ai.open_ai]
model = "claude-sonnet-4-20250514"

[ai.anthropic]
api_key = "{{- onepasswordRead .my.perplexity_api_key "my" }}"

[completion]
api_key = "{{- onepasswordRead .my.windsurf_api_key "my" }}"
copilot = "codeium"
activate_on_typing = true
{{- end }}

[ai.bedrock]

[display]
code_editor_font_size = 14
dataframes = "rich"
default_table_page_size = 10
cell_output = "above"
default_width = "medium"
theme = "light"

[language_servers.pylsp]
enable_pyflakes = false
enabled = true
enable_pylint = false
enable_mypy = true
enable_ruff = true
enable_flake8 = false
enable_pydocstyle = false

[package_management]
manager = "uv"

[experimental]

[formatting]
line_length = 79

[snippets]
custom_paths = []
include_default_snippets = true

[keymap]
preset = "default"

[keymap.overrides]

[runtime]
output_max_bytes = 8000000
std_stream_max_bytes = 1000000
reactive_tests = true
watcher_on_save = "lazy"
auto_reload = "off"
default_sql_output = "auto"
on_cell_change = "autorun"
auto_instantiate = true

[server]
follow_symlink = false
browser = "default"

[save]
format_on_save = true
autosave_delay = 1000
autosave = "after_delay"
