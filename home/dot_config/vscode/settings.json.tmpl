{
  // --------------------------------
  // David Lawson | VSCode Settings
  // --------------------------------

  // üåà UI & Workbench
  "window.autoDetectColorScheme": false,
  "window.dialogStyle": "custom",
  "window.nativeTabs": false,
  "window.title": "${rootName}",
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-perfect-mocha",
  "workbench.productIconTheme": "catppuccin-product-icon-theme",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 15,
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,

  // üß† Editor
  "editor.rulers": [120],
  "editor.tabSize": 4,
  "editor.accessibilitySupport": "off",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'JetBrains Mono', Menlo, Monaco, 'Input Mono', monospace",
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "boundary",
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  "editor.codeActionsOnSave": {
    "source.sortPackageJson": "explicit"
  },

  // üìÅ Files
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true,
    "**/.venv*/**": true,
    "**/.venvs*/**": true,
    "**/venv*/**": true
  },

  // üß™ Terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.external.osxExec": "Ghostty.app",

  // üß© Extensions
  "extensions.autoUpdate": "onlyEnabledExtensions",

  // üîç Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // üîÅ Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.untrackedChanges": "separate",

  // üí¨ GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.reviewSelection.instructions": [{ "file": "copilot.md" }],
  "github.copilot.chat.codeGeneration.instructions": [{ "file": "copilot.md" }],
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Use Conventional Commits format: type(scope): subject." },
    { "text": "Keep the subject under 50 characters, imperative mood." },
    { "text": "Explain why the change was made, not how." },
    { "text": "Use present tense and be concise." },
    { "text": "Avoid vague words like 'fix' or 'update' alone." }
  ],

  // üßº Prettier
  "prettier.bracketSameLine": true,
  "prettier.printWidth": 120,
  "prettier.singleAttributePerLine": false,
  "prettier.semi": false,
  "prettier.singleQuote": true,

  // üåÄ Tailwind
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.lint.invalidTailwindDirective": "warning",
  "tailwindCSS.classAttributes": ["class", "className", "ngClass", "class:list"],

  // üí• Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.useInlineCompletions": true,

  // üß† Even Better TOML
  "evenBetterToml.formatter.alignComments": true,
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.arrayAutoExpand": true,
  "evenBetterToml.formatter.arrayTrailingComma": true,
  "evenBetterToml.formatter.columnWidth": 100,
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentString": "    ",
  "evenBetterToml.formatter.indentTables": true,
  "evenBetterToml.formatter.reorderArrays": true,
  "evenBetterToml.formatter.reorderKeys": true,

  // üìÅ Project Manager
  "projectManager.git.baseFolders": ["{{ .chezmoi.git_dir}}"],
  "projectManager.sortList": "Recent",

  // üîç Search Exclusions
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/*.snap": true,
    "**/*.svg": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true,
    "*/coverage/": true
  },

  // üõ°Ô∏è Security & Telemetry
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,

  // ‚ú® Wiz
  "wiz.autoDownloadWizCli": true,
  "wiz.scanOnSave": false,
  "wiz.tags": "source=vscode",
  "wiz.environment": "demo",
  "wiz.disableAnalytics": true,
  "wiz.disableScanServiceTelemetry": true,
  "wiz.Enable IAC Ignore Comments": true,

  // üß† Python
  "python.languageServer": "Pylance",
  "python.analysis.autoIndent": true,
  "python.analysis.indexing": true,
  "python.analysis.typeEvaluation.enableReachabilityAnalysis": true,
  "python.analysis.supportDocstringTemplate": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "fastapi",
      "depth": 3,
      "includeAllSymbols": true
    }
  ],
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.languageServerMode": "default",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoFormatStrings": true,
  "python.defaultInterpreterPath": "/Users/dlawson/Library/Caches/pypoetry/virtualenvs/immigration-pro-27D8KO5_-py3.12/bin/python3.12",

  // üß™ Ruff
  "ruff.nativeServer": "on",
  "ruff.path": ["./.venv/bin/ruff", "~/.local/bin/ruff"],
  "ruff.enable": true,
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.showNotifications": true,

  // üåç Terraform
  "terraform.experimentalFeatures.validateOnSave": true,
  "terraform.experimentalFeatures.prefillRequiredFields": true,

  // üß† Language Specifics
  "[python]": {
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [120],
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [120]
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  // üß† TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ‚öôÔ∏è ChatGPT Editing
  "chat.editing.alwaysSaveWithGeneratedChanges": true,

  // üå† Astro
  "astro.content-intellisense": true,

  // üß† Roo
  "roo-cline.allowedCommands": ["pnpm run test", "pnpm install", "tsc", "git log", "git diff", "git show"],
  "files.associations": {
    "*.tmpl": "go-template"
  }
}
